@model List<Modelos.Empleado>

@{
    ViewData["Title"] = "Listado de empleados";
    Layout = "_Layout";

    string modulo = "Empleado";
    string tipo = null;
    string mensaje = null;

    // ✅ Manejo simple y confiable de mensajes
    if (TempData[$"Mensaje{modulo}XExito"] is string msgExito)
    {
        tipo = "success";
        mensaje = msgExito;
    }
    else if (TempData[$"Mensaje{modulo}XError"] is string msgError)
    {
        tipo = "danger";
        mensaje = msgError;
    }

    var icono = tipo switch
    {
        "success" => "fa-check-circle",
        "danger" => "fa-exclamation-circle",
        _ => "fa-info-circle"
    };
}

<div class="empleados-container">
    <h2 class="text-center mb-4">
        <i class="fas fa-users me-2"></i>Listado de empleados
    </h2>

    @* 🔔 Alerta visual del sistema *@
    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="alert alert-@tipo alert-dismissible fade show text-center mx-auto w-75" role="alert">
            <i class="fas @icono me-2"></i> @mensaje
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-user-plus me-2"></i> Registrar empleado
        </a>
    </div>

    <form asp-action="Index" method="get" class="busqueda-empleados mb-4 d-flex justify-content-center gap-3">
        <input type="text" name="filtro" class="form-control w-50"
               placeholder="Buscar por cédula o nombre..." value="@Context.Request.Query["filtro"]" />
        <button type="submit" class="btn btn-primary" title="Filtrar por texto">
            <i class="fas fa-search me-1"></i> Buscar
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary" title="Mostrar todos">
            <i class="fas fa-times-circle me-1"></i> Limpiar
        </a>
    </form>

    @if (Model?.Any() == true)
    {
        <div class="table-responsive mb-5">
            <table class="table table-bordered table-hover table-striped text-center align-middle shadow-sm">
                <thead class="table-primary position-sticky top-0">
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Puesto</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.Identificacion</td>
                            <td>@e.NombreCompleto</td>
                            <td>@e.Puesto</td>
                            <td>@e.Telefono</td>
                            <td>@e.Correo</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalles">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-outline-warning btn-sm me-1" title="Editar empleado">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-outline-danger btn-sm" title="Eliminar registro">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i> No hay empleados registrados.
        </div>
    }
</div>
