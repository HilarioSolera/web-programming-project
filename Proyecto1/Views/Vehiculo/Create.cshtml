@model Modelos.Vehiculo

@{
    ViewData["Title"] = "Registrar vehículo";
    Layout = "_Layout";
}

<div class="vehiculos-container">
    <h2 class="text-center mb-4">
        <i class="fas fa-car me-2"></i>@ViewData["Title"]
    </h2>

    @if (TempData["MensajeVehiculoXError"] is string mensajeError)
    {
        <div class="alert alert-danger text-center">@mensajeError</div>
    }

    <form asp-action="Create" method="post" class="vehiculo-form">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger text-center mb-3" })

        <!-- Placa -->
        <div class="mb-3">
            <label asp-for="Placa" class="form-label">Placa</label>
            <input asp-for="Placa" class="form-control" />
            <span asp-validation-for="Placa" class="text-danger"></span>
        </div>

        <!-- Marca -->
        <div class="mb-3">
            <label asp-for="Marca" class="form-label">Marca</label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <!-- Modelo -->
        <div class="mb-3">
            <label asp-for="Modelo" class="form-label">Modelo</label>
            <input asp-for="Modelo" class="form-control" />
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>

        <!-- Color -->
        <div class="mb-3">
            <label asp-for="Color" class="form-label">Color</label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <!-- Año -->
        <div class="mb-3">
            <label asp-for="Anio" class="form-label">Año</label>
            <input asp-for="Anio" type="number" min="1900" max="2100" class="form-control" />
            <span asp-validation-for="Anio" class="text-danger"></span>
        </div>

        <!-- Tracción -->
        <div class="mb-3">
            <label asp-for="Traccion" class="form-label">Tracción</label>
            <select asp-for="Traccion" class="form-select">
                <option value="">Seleccione una opción</option>
                <option value="4x2">4x2</option>
                <option value="4x4">4x4</option>
                <option value="AWD">AWD</option>
            </select>
            <span asp-validation-for="Traccion" class="text-danger"></span>
        </div>

        <!-- Tratamiento Nano-Cerámico -->
        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="TratamientoNanoCeramico" type="checkbox" />
            <label class="form-check-label" asp-for="TratamientoNanoCeramico"></label>
        </div>

        <!-- Última atención -->
        <div class="mb-3">
            <label asp-for="UltimaAtencion" class="form-label">Última atención</label>
            <input asp-for="UltimaAtencion" type="date" class="form-control" />
            <span asp-validation-for="UltimaAtencion" class="text-danger"></span>
        </div>

        <!-- Cliente -->
        <div class="mb-4">
            <label class="form-label">Cliente</label>
            <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes">
                <option disabled selected value="">Seleccione un cliente</option>
            </select>
            <span asp-validation-for="ClienteId" class="text-danger"></span>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-center gap-3 mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-1"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
