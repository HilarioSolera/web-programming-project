@model Modelos.Vehiculo

@{
    ViewData["Title"] = "Eliminar vehículo";
    Layout = "_Layout";
}

<div class="vehiculos-container">
    <h2 class="text-center mb-4">
        <i class="fas fa-car-side me-2"></i>Eliminar vehículo
    </h2>

    <h4 class="text-center text-danger mb-4">
        ¿Está seguro de que desea eliminar este vehículo?
    </h4>

    <!-- 📋 Datos del vehículo -->
    <div class="card shadow-sm w-75 mx-auto p-4 border-danger">
        <dl class="row">
            <dt class="col-sm-4 text-end fw-bold">Placa</dt>
            <dd class="col-sm-8">@Model.Placa</dd>

            <dt class="col-sm-4 text-end fw-bold">Marca</dt>
            <dd class="col-sm-8">@Model.Marca</dd>

            <dt class="col-sm-4 text-end fw-bold">Modelo</dt>
            <dd class="col-sm-8">@Model.Modelo</dd>

            <dt class="col-sm-4 text-end fw-bold">Color</dt>
            <dd class="col-sm-8">@Model.Color</dd>

            <dt class="col-sm-4 text-end fw-bold">Año</dt>
            <dd class="col-sm-8">@Model.Anio</dd>

            <dt class="col-sm-4 text-end fw-bold">Tracción</dt>
            <dd class="col-sm-8">@Model.Traccion</dd>

            <dt class="col-sm-4 text-end fw-bold">Tratamiento nano cerámico</dt>
            <dd class="col-sm-8">@(Model.TratamientoNanoCeramico ? "Sí" : "No")</dd>

            <dt class="col-sm-4 text-end fw-bold">Última atención</dt>
            <dd class="col-sm-8">
                @(
                                Model.UltimaAtencion?.ToString("dd/MM/yyyy") ?? "—"
                                )
            </dd>

            <dt class="col-sm-4 text-end fw-bold">Cliente</dt>
            <dd class="col-sm-8">
                @(Model.Cliente?.NombreCompleto ?? $"ID: {Model.ClienteId}")
            </dd>
        </dl>
    </div>

    <!-- 🧼 Botones de acción -->
    <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-3 mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-outline-danger">
            <i class="fas fa-trash-alt me-1"></i> Confirmar eliminación
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Cancelar
        </a>
    </form>
</div>
