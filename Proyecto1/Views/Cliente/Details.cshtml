@model Modelos.Cliente

@{
    ViewData["Title"] = "Detalles del cliente";
    Layout = "_Layout";
}

<div class="clientes-container">
    <h2 class="text-center mb-4">
        <i class="fas fa-user-tag me-2"></i>Detalles del cliente
    </h2>

    <table class="table table-bordered table-striped w-75 mx-auto text-start align-middle shadow-sm">
        <tbody>
            @foreach (var prop in new[] {
                        ("Identificación", Model.Identificacion),
                        ("Nombre completo", Model.NombreCompleto),
                        ("Provincia", Model.Provincia),
                        ("Cantón", Model.Canton),
                        ("Distrito", Model.Distrito),
                        ("Dirección exacta", Model.DireccionExacta),
                        ("Teléfono", Model.Telefono),
                        ("Correo electrónico", Model.Correo),
                        ("Preferencia de lavado", Model.PreferenciaLavado)
                        })
            {
                <tr>
                    <th class="table-primary text-end px-4">@prop.Item1</th>
                    <td class="px-3">@prop.Item2</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
            <i class="fas fa-trash-alt me-1"></i> Eliminar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver
        </a>
    </div>
</div>