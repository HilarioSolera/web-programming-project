@{
    var bodyClass = ViewData["BodyClass"] as string ?? "";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto3</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto1.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />
</head>

<body class="@bodyClass d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary px-3">
            <!-- Logo o icono home -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home fa-lg me-2"></i> 
            </a>

            <!-- Botón colapsable para móviles -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal" aria-controls="menuPrincipal" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú -->
            <div class="collapse navbar-collapse" id="menuPrincipal">
                <ul class="navbar-nav mx-auto d-flex flex-row flex-lg-row gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentController == "Cliente" ? "fw-bold border-bottom border-white" : "")"
                           asp-controller="Cliente" asp-action="Index" aria-label="Ir a Clientes">
                            <i class="fas fa-user me-1"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentController == "Empleado" ? "fw-bold border-bottom border-white" : "")"
                           asp-controller="Empleado" asp-action="Index" aria-label="Ir a Empleados">
                            <i class="fas fa-user-tie me-1"></i> Empleados
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentController == "Vehiculo" ? "fw-bold border-bottom border-white" : "")"
                           asp-controller="Vehiculo" asp-action="Index" aria-label="Ir a Vehículos">
                            <i class="fas fa-car me-1"></i> Vehículos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(currentController == "Lavado" ? "fw-bold border-bottom border-white" : "")"
                           asp-controller="Lavado" asp-action="Index" aria-label="Ir a Lavados">
                            <i class="fas fa-soap me-1"></i> Lavados
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main role="main" class="flex-grow-1 @(ViewData["BodyClass"]?.ToString() == "fondo-inicio" ? "" : "container pb-3")">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-3 mt-auto">
        <div class="container">
            &copy; Sistema de Lavado de Vehículos
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
