@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Listado de lavados";
    Layout = "_Layout";

    string modulo = "Lavado";
    string tipo = null;
    string mensaje = null;

    // ✅ Detección estandarizada de mensajes
    if (TempData[$"Mensaje{modulo}XExito"] is string msgExito)
    {
        tipo = "success";
        mensaje = msgExito;
    }
    else if (TempData[$"Mensaje{modulo}XError"] is string msgError)
    {
        tipo = "danger";
        mensaje = msgError;
    }

    var icono = tipo switch
    {
        "success" => "fa-check-circle",
        "danger" => "fa-exclamation-circle",
        _ => "fa-info-circle"
    };
}

<div class="lavados-container">
    <h2 class="text-center mb-4">
        <i class="fas fa-broom me-2"></i>Listado de lavados
    </h2>

    @* 🔔 Mensajes del sistema *@
    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="alert alert-@tipo alert-dismissible fade show text-center mx-auto w-75" role="alert">
            <i class="fas @icono me-2"></i> @mensaje
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <!-- 🎯 Botones de acción -->
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg me-2">
            <i class="fas fa-plus-circle me-2"></i>Registrar lavado
        </a>
        <a asp-controller="Reporte" asp-action="Proyeccion" class="btn btn-info btn-lg">
            <i class="fas fa-chart-line me-2"></i>Reporte de proyección
        </a>
    </div>

    <!-- 🔍 Buscador -->
    <form asp-action="Index" method="get" class="busqueda-lavados mb-4 d-flex justify-content-center gap-3">
        <input type="text" name="filtro" class="form-control w-50" placeholder="Buscar por ID, tipo o estado" value="@ViewBag.Filtro" />
        <button type="submit" class="btn btn-primary" title="Filtrar">
            <i class="fas fa-search me-1"></i>Buscar
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary" title="Mostrar todos">
            <i class="fas fa-times-circle me-1"></i>Limpiar
        </a>
    </form>

    <!-- 📋 Tabla de lavados -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive mb-5">
            <table class="table table-bordered table-hover table-striped text-center align-middle shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>Cliente</th>
                        <th>Vehículo</th>
                        <th>Empleado</th>
                        <th>Tipo</th>
                        <th>Precio sin IVA</th>
                        <th>Precio con IVA</th>
                        <th>Estado</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in Model)
                    {
                        <tr>
                            <td>@l.Cliente</td>
                            <td>@l.Vehiculo</td>
                            <td>@l.Empleado</td>
                            <td>@l.TipoLavado</td>
                            <td>₡@l.Precio.ToString("N2")</td>
                            <td>₡@(Math.Round(l.Precio * 1.13m, 2).ToString("N2"))</td>
                            <td>@l.Estado</td>
                            <td>@l.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@l.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalles">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@l.Id" class="btn btn-outline-warning btn-sm me-1" title="Editar lavado">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@l.Id" class="btn btn-outline-danger btn-sm" title="Eliminar registro">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i> No hay lavados registrados.
        </div>
    }
</div>
